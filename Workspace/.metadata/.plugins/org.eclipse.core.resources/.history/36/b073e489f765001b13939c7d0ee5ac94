
public class Kartentrick {

	public static void main(String[] args) {
		System.out.println("Kartentrick");
		System.out.println("===========");
		do {
			int[][]karten = null;
			karten = fuellen(karten, 0);
			ausgeben(karten);
			int spalte = readInt("Spalte der Karte: ");
			
			karten = fuellen(karten, spalte);
			ausgeben(karten);
			spalte = readInt("Spalte der Karte: ");
			
			karten = fuellen(karten, spalte);
			ausgeben(karten);
			spalte = readInt("Spalte der Karte: ");
			
			karten = fuellen(karten, spalte);
			ausgeben(karten);
			System.out.println("Karte " + karten[3][1] + " wurde gewählt");
			
			} while (Character.toLowerCase(
			readChar("Nochmals (j/n)? ")) == 'j');
	}
	
	public static char readChar(String text) {
	    System.out.print(text);
	    return (new java.util.Scanner(System.in).next().charAt(0));
	  }
	public static int readInt(String text) {
	    System.out.print(text);
	    return (new java.util.Scanner(System.in)).nextInt();
	  }
	
	public static void printZahl(int zahl) {
		if (zahl < 10)
			System.out.print("   " + zahl);
		else
			if (zahl < 100)
				System.out.print("  " + zahl);
			else
				System.out.print(" " + zahl);
	}
	
	public static int[][] fuellen(int[][]karten, int spalte) {
		int[][] ret = new int[7][3];
		
		if (karten == null) {
			int n = 0;
			karten = new int[7][3];
			for (int i = 0; i < 7; i++) {
				for (int j = 0; j < 3; j++) {
					karten[j][i] = n+1;
					n++;
				}
			}
			ret = karten;
		}
		
		if (spalte == 1) {
			for(int i = 0; i < 3; i++) {
				for(int j = 0; j < 7; j++) {
					ret[i][j] = karten[i][j];
				}
			}
			
			
		} else if (spalte == 2) {
			for(int i = 0; i < 7; i++) {
				ret[0][i] = karten[0][i];
			}
			for(int i = 0; i < 7; i++) {
				ret[1][i] = karten[1][i];
			}
			for(int i = 0; i < 7; i++) {
				ret[2][i] = karten[2][i];
			}
		} else if (spalte == 3) {
			for(int i = 0; i < 7; i++) {
				ret[0][i] = karten[0][i];
			}
			for(int i = 0; i < 7; i++) {
				ret[1][i] = karten[2][i];
			}
			for(int i = 0; i < 7; i++) {
				ret[2][i] = karten[1][i];
			}
		}
		
		return ret;
	}

	public static void ausgeben(int[][]karten) {
		int spalte = 3;
		int zeile = 7;
		
		if(karten == null) {
			System.out.println("lol");
		}
		
		for(int i = 0; i < zeile; i++) {
			for(int j = 0; j < spalte; j++) {
				printZahl(karten[j][i]);
			}
			System.out.println();
		}
	}
}
